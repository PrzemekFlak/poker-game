<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pokertoolserver.LobbyController">
   <children>
      <VBox alignment="CENTER" layoutX="-1.0" prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #505356;">
         <children>
            <Button id="Table" fx:id="tableButton" mnemonicParsing="false" onAction="#goToTableButton" prefHeight="60.0" prefWidth="100.0" text="Table">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="40.0" />
               </VBox.margin>
            </Button>
            <ImageView fitHeight="332.0" fitWidth="355.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/A%20deck.jpg" />
               </image>
            </ImageView>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#goToLoginButton" prefHeight="60.0" prefWidth="100.0" text="Login">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="40.0" />
                     </HBox.margin>
                  </Button>
                  <Button alignment="CENTER" layoutX="252.0" layoutY="30.0" mnemonicParsing="false" onAction="#goToOddsButton" prefHeight="60.0" prefWidth="98.0" text="Odds">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="20.0" right="40.0" />
                     </HBox.margin>
                  </Button>
                  <Button alignment="CENTER" layoutX="341.0" layoutY="30.0" mnemonicParsing="false" onAction="#exitButton" prefHeight="60.0" prefWidth="98.0" text="Exit">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
